@import "normalize"
@import "variables"

body
    display flex
    min-height 100vh
    flex-direction column
    background #ecf0f1
    &::-webkit-scrollbar
    	width 10px
    	background white
    &::-webkit-scrollbar-thumb
    	width 10px
    	background #b1abb0
    	border-radius 50px

main 
	flex 1 0 auto

.header-height
	margin-top 64px
	
header
	width 100%
	position absolute
	top 20px
	z-index 1000
	background purple
	transition 0.2s linear
	&.second-header
		top 0
	+mq(1200px)
		top 0
	&.fixed
		position fixed 
		background rgba(purple, 0.9)
		top 0
	.logo
		margin-top 13px
		margin-right 15px
		margin-bottom 5px
		img
			width 40px
	nav
		&.menu
			+mq(1200px)
				display none
		a
			position relative
			span
				position relative
				z-index: 5;
				font-family caps
				font-size 13px
			&::after
				height 2px
				width 0
				transition 0.2s
				position absolute
				bottom 2px
				background orange
				// left 0
				left 50%
				transform translateX(-50%)
				content " "
			&.active,
			&:hover
				background transparent
				&::after
					width 100%
	.enter-register
		display inline-flex
		align-items center
		color white
		font-size 13px
		margin-top 23px
		+mq(600px)
			display none
		img
			width 20px
			margin-right 4px
		a
			font-family caps
			color white
			margin 0 4px
	.search
		background transparent url(../img/search.svg)
		background-size 100%
		border none
		width 20px
		height 20px
		margin 24px 0 0 15px
		&.active
			background transparent url(../img/close.svg)
			background-size 100%

.responsive-menu 
	display none
	position fixed
	z-index 100
	width 100%
	height 100vh
	background rgba(purple, 0.95)
	top 100%
	opacity 0
	left 0
	transition 0.3s
	+mq(1200px)
		display block
	&.active
		top 0
		opacity 1
	nav
		ul
			padding 60px 50px 50px
			+mq(600px)
				padding 45px 20px 50px
		li
			width 100%
			display block
	.enter-register
		display none
		margin-top 0
		+mq(600px)
			display inline-flex
		img
			margin-right 0
			margin-left 14px
		a
			margin 0
			padding 0 8px
.close-resp-menu
	background transparent url(../img/close.svg)
	background-size 100%
	border none
	width 20px
	height 20px
	right 25px
	top 0
	position absolute
	margin 24px 0 0 15px

.burger-bar
	display none
	background transparent url(../img/menu.svg)
	background-size 100%
	border none
	width 20px
	height 20px
	margin 24px 0 0 15px
	+mq(1200px)
		display block

		

.search-content
	padding 0
	overflow hidden
	height 0
	background rgba(white, 0.6)
	transition 0.2s ease-out
	.container
		position relative
		height 0
		transition 0.2s
	.triangle
		position absolute
		transition 0.2s
		width 13px 
		max-height 0
		right 13px
		top 0
		background #b8b2b7
		-webkit-clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
		clip-path: polygon(50% 0%, 0% 100%, 100% 100%);
		+mq(1200px)
			right 48px
	form
		+mq(600px)
			width 100%
	.input-field
		+mq(600px)
			width calc(100% - 35px)
	input
		width 300px
		border none
		height 35px
		border-top-left-radius 4px
		border-bottom-left-radius 4px
		padding-left 8px
		box-sizing border-box
		+mq(600px)
			width 100%
	button
		width 35px
		height 35px
		border none
		background white
		border-top-right-radius 4px
		border-bottom-right-radius 4px
		span
			background url(../img/search-black.svg) center no-repeat
			background-size 50%
			display block
			width 100%
			height 70%
			border-left 1px solid rgba(grey, 0.2)
	&.active
		padding 12px 0 12px
		height auto
		overflow visible
		.container
			height auto
		.triangle
			max-height 13px
			height 13px
			top -22px
